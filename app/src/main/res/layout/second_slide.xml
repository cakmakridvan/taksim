<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_slide"
        android:layout_centerInParent="true"
        android:id="@+id/frame2"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_map_tutorial"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:id="@+id/izmir_icon2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/izmir_icon2"
            android:layout_centerHorizontal="true"
            android:text="Konum Seçimi"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_title"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_title"
            android:layout_centerHorizontal="true"
            android:text="Gitmek istediğiniz adresi ilgili alana"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:id="@+id/txt_subtitle2"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_subtitle2"
            android:layout_centerHorizontal="true"
            android:text="yazarak kolayca belirleyebilirsiniz."
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginTop="5dp"
            />


    </RelativeLayout>




